<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <%= image_tag(@product.image_url, class: 'img-fluid') %>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h4><%= @product.name %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <p><%= @product.description %></p>
      <strong>Color: </strong><p><%= @product.color %></p>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
