<h1 class="site-title">Orders Index</h1>
<div class="container">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-12 col-md-4">
        <h4>Order # <%= order.id %>: <%= link_to order.product.name, order %></h4>
        <p><%= order.product.description %></p>
        <strong><%= number_to_currency(order.product.price) %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
