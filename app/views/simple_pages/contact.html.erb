<div class="container">
  <h1 class="site-title">Contact</h1>
  <div class="row">
    <h4 class="mx-auto">Fill out this contact form and we will get right back to you!</h4>
  </div>
    <%= flash[:notice] %>
      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, class:"mx-auto") do |form| %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
        </div>

      <%= form.submit "Send", class: "form_label btn btn-primary" %>
      <% end %>
  <div class="row">
    <h4 class="mx-auto">Or, reach out to us at any of the methods below</h4>
  </div>
  <dl class="row mx-auto text-center">
    <dt class="col-sm-3">Phone</dt>
    <dd class="col-sm-9">(555) 555 - 5555</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">notarealemail@email.com</dd>

    <dt class="col-sm-3">Address</dt>
    <dd class="col-sm-9">1111 N Queen St.</dd>

    <dt class="col-sm-3">FAX</dt>
    <dd class="col-sm-9">(111) 111 - 1111</dd>
  </dl>
</div>
